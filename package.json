{
  "name": "xpub",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.4.1",
    "eslint-config-react-app": "^2.0.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "lerna": "^2.0.0",
    "lint-staged": "^4.1.3",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.coko.foundation:xpub/xpub.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --concurrency=1",
    "hoist": "lerna bootstrap --hoist --concurrency=1",
    "clean": "lerna clean",
    "styleguide": "lerna run styleguide",
    "test": "lerna run test",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint packages",
    "lint:style": "stylelint packages/**/*.scss packages/**/*.css"
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ],
    "*.css": "stylelint",
    "*.scss": "stylelint"
  },
  "engines": {
    "node": ">=7.9"
  }
}
