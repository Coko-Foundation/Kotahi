<footer>
    <div class="footer-info-container">
        <div class="footer-cms-page-info-container">
            <div class="footer-cms-page-listing">
                {% for cmsFooterPage in (cmsLayout.flaxFooterConfig | reorderPages) %}
                    {% if cmsFooterPage.shownInMenu == true or cmsFooterPage.shownInMenu == "true" %}
                        <div class="pageListItem">
                            <a
                            href="{{ cmsFooterPage.url }}"
                            title="{{ cmsFooterPage.title }}">
                            {{ cmsFooterPage.title }}
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="footerText">
            {{ cmsLayout.footerText | safe }}
        </div>
    </div>
</footer>